#landing
	.left
		h2 Wompt is Chat
		.subtitle Try it free, no account required.
		form(method='post')
			input.text.big#channel(name='channel', type='text')
			input.submit#join(type='submit', value="Join Chat")
	.right
		form(method='post', action='/users/new')
			table
				tr.title
					td(colspan='2')
						h2 Sign Up
						.subtitle Wompt is free, now and forever.
				tr
					th
						label(for='sign_up_name') Name
					td
						input.text(id='sign_up_name', name='name', type='text')
				tr
					th
						label(for='sign_up_email') Email
					td
						input.text(id='sign_up_email', name="email", type='text')
				tr
					th
						label(for='sign_up_password') Password
					td
						input.text(id='sign_up_password', name="password", type="password")
				tr
					td
					td
						input.submit(type='submit', value="Sign Up")
	.clear