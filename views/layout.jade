	body
		#toplinks
			p
				a(href="/users/login", title="Go to login page") Log in
				&middot;
				a(href="/users/logout", title="Logout of Wompt") Log out
				&middot;
				a(href="/users/new", title="Go to sign up page") Register
				&middot;
				a(href="/contactus", title="Go to contact and support page") Contact us
		br
		- if (typeof url != "undefined" && url == "/")
			#logocenter
				h1
					a(hef="/", title="Wompt.com")
						img(src="/wompt_logo_230.png")
		- else
			#logotopleft
				h1
					a(hef="/", title="Wompt.com")
						img(src="/wompt_logo_230.png")
		#{body}
		#footer
			p
				a(href="/terms", title="View terms of use") Terms of Use
				&middot;
				a(href="/privacy", "View privacy policy") Privacy
