!!!
html
	head
		title Wompt Chat!
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js", type="text/javascript")
		script(src="http://cdn.socket.io/stable/socket.io.js", type="text/javascript")
		script(src=assets.path("/external/events.js"), type="text/javascript")
		script(src=assets.path("/client.js"), type="text/javascript")
		link(href=assets.path("/base.css"), rel="stylesheet", type="text/css", media="screen,projection")
		link(href=assets.path("/favicon.ico"), rel="shortcut icon", type="image/x-icon")
		link(href=assets.path("/apple-itouch-icon.png"), rel="apple-touch-icon")
		meta(http-equiv="content-type", content="text/html; charset=utf-8")
		meta(meta name="description", content="Wompt is chat.")
		meta(name="keywords", content="chat,irc,webchat,chatroom,chat room")
		meta(name="author", content="Wompt, Inc.")
	body
		#top
			#toplinks
				a(href="/users/sign_in", title="Go to Sign-in page") sign in
				!= " &middot; "
				a(href="/users/sign_out", title="Logout of Wompt") sign out
				!= " &middot; "
				a(href="/users/new", title="Go to sign up page") register
				!= " &middot; "
				a(href="/support", title="Go to contact and support page") support
			- if (w.url == "/")
				#logo.center
					a(href="/", title="Wompt.com")
						img(src=assets.path("/wompt_logo_200.png"))
			- else
				#logo.top_left
					a(href="/", title="Wompt.com")
						img(src=assets.path("/logo_white.png"))
						| Wompt
					| : #{channel}
			.clear
		.main
			#{body}
		- if (w.footer)
			#footer
				a(href="/terms", title="View terms of use") Terms of Use
				&middot;
				a(href="/privacy", title="View privacy policy") Privacy
				&middot;
				Copyright &copy; 2010 Wompt, Inc.
		:javascript
			| var _gaq = _gaq || [];
			| _gaq.push(['_setAccount', 'UA-19794419-1']);
			| _gaq.push(['_trackPageview']);
		
			| (function() {
			| 	var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			| 	ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
