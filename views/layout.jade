		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js", type="text/javascript")
		script(src="http://cdn.socket.io/stable/socket.io.js", type="text/javascript")
		script(src="/client.js", type="text/javascript")
		link(href="/base.css", rel="stylesheet", type="text/css", media="screen,projection")
		link(href="/favicon.ico", rel="shortcut icon", type="image/x-icon")
		link(href="/apple-itouch-icon.png", rel="apple-touch-icon")
		meta(http-equiv="content-type", content="text/html; charset=utf-8")
		meta(meta name="description", content="Wompt is chat.")
