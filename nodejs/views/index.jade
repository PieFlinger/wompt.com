#landing
	.row
		.cell.side_list#left_side
			h2 Twitter Topics
			- each chan in w.popular_channels.sorted_list
				div (#{chan.clients.count}) - #{chan.name}
		.cell.channel_selector
			h1.title Wompt is Group Chat
			.subtitle #{w.subtitle}
			form(method='post')
				input.text.big.inline_label#channel(name='channel', title="Chat topic", type='text')
				input.submit#join(type='submit', value="Join Chat Channel")
		.cell.side_list#right_side
			h2 Trending Topics
			- each chan in w.popular_channels.sorted_list
				div (#{chan.clients.count}) - #{chan.name}
		.clear
